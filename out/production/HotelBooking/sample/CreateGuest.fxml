<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.RowConstraints?>

<GridPane prefHeight="200.0" prefWidth="300.0" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.CreateGuest">
    <Label text="GuestID: " GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="0" />
    <TextField fx:id="GuestID" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="0" />

    <Label text="Last Name: " GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="1" />
    <TextField fx:id="lastName" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="1" />

    <Label text="First Name: " GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="2" />
    <TextField fx:id="firstName" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="2" />

    <Label text="Phone Number: " GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="3" />
    <TextField fx:id="phoneNumber" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="3" />

    <Label text="Email: " GridPane.columnIndex="0" GridPane.halignment="CENTER" GridPane.rowIndex="4" />
    <TextField fx:id="email" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="4" />

    <HBox spacing="20" GridPane.columnIndex="1" GridPane.halignment="CENTER" GridPane.rowIndex="5">
        <Button text="Ok" GridPane.halignment="CENTER" onAction="#insertnewguest"/>
        <Button fx:id="cancelButton" text="Cancel" GridPane.halignment="CENTER" onAction="#setCancelButton"/>
      <padding>
         <Insets top="10.0" />
      </padding>
    </HBox>

</GridPane>
