<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="mainpane" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller" prefWidth="800" prefHeight="800">
    <left>
        <TableView fx:id="roomsTableView" prefWidth="500">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn fx:id="roomnumber" prefWidth="58.0" text="Room">
                    <cellValueFactory>
                        <PropertyValueFactory property="RoomNumber"></PropertyValueFactory>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="66.0" text="Type">
                    <cellValueFactory>
                        <PropertyValueFactory property="Type"></PropertyValueFactory>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="95.0" text="Rate">
                    <cellValueFactory>
                        <PropertyValueFactory property="rate"></PropertyValueFactory>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </left>
    <center>
        <VBox alignment="CENTER" spacing="40">
            <Label text="1.Search available rooms on the specific date">
                <font>
                    <Font size="16"></Font>
                </font>
            </Label>

            <Label text="2.Create a guest's profile if he/she is new">
                <font>
                    <Font size="16"></Font>
                </font>
            </Label>

            <Label text="3.Reserve a room">
                <font>
                    <Font size="16"></Font>
                </font>
            </Label>

            <children>
                <HBox alignment="CENTER">
                    <Label text="Date: "></Label>
                    <DatePicker fx:id="checkindatepicker"></DatePicker>
                </HBox>
                <Button text="Search" onAction="#listSearchedRooms"></Button>
                <HBox alignment="CENTER" spacing="10">
                    <Button text="Create a guest" onAction="#addGuest"></Button>
                    <Button text="Reserve" onAction="#addReservation"></Button>
                </HBox>
                <Button fx:id="checkReservation" text="Check Reservation" onAction="#showReservation"></Button>
            </children>
        </VBox>
    </center>
  </BorderPane>
