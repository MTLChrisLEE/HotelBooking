<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>

<?import javafx.scene.control.cell.PropertyValueFactory?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.layout.HBox?>
<BorderPane fx:id="mainpane" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
    <left>
        <TableView fx:id="roomsTableView" prefWidth="500">
            <columnResizePolicy>
                <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
            </columnResizePolicy>
            <columns>
                <TableColumn prefWidth="58.0" text="Room">
                    <cellValueFactory>
                        <PropertyValueFactory property="RoomNumber"></PropertyValueFactory>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="66.0" text="Type">
                    <cellValueFactory>
                        <PropertyValueFactory property="Type"></PropertyValueFactory>
                    </cellValueFactory>
                </TableColumn>
                <TableColumn prefWidth="95.0" text="Rate">
                    <cellValueFactory>
                        <PropertyValueFactory property="rate"></PropertyValueFactory>
                    </cellValueFactory>
                </TableColumn>
            </columns>
        </TableView>
    </left>
    <center>
        <VBox alignment="CENTER" spacing="40">
            <children>
                <HBox alignment="CENTER">
                    <Label text="Check In Date: "></Label>
                    <DatePicker></DatePicker>
                </HBox>
                <HBox alignment="CENTER">
                    <Label text="Check Out Date: "></Label>
                    <DatePicker></DatePicker>
                </HBox>
                <Button text="Reserve"></Button>
                <Button fx:id="checkReservation" text="Check Reservation" onAction="#showReservation"></Button>
            </children>
        </VBox>
    </center>
  </BorderPane>
