<?import javafx.geometry.Insets?>
<GridPane fx:id="ReservePane" prefHeight="150" prefWidth="300" xmlns="http://javafx.com/javafx/8.0.112" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.ReserveDialogPane">
            <Label text="GuestID: " GridPane.columnIndex="0" GridPane.rowIndex="0" />
            <TextField onKeyPressed="#PressEnterInsertReservation" fx:id="GuestID" GridPane.columnIndex="1" GridPane.rowIndex="0" />

            <Label text="Room Number: " GridPane.columnIndex="0" GridPane.rowIndex="1" />
            <TextField onKeyPressed="#PressEnterInsertReservation" fx:id="roomnumber" GridPane.columnIndex="1" GridPane.rowIndex="1" />

            <Label text="Check In Date: " GridPane.columnIndex="0" GridPane.rowIndex="2" />
            <DatePicker onKeyPressed="#PressEnterInsertReservation" fx:id="checkindate" GridPane.columnIndex="1" GridPane.rowIndex="2" />

            <Label text="Check Out Date: " GridPane.columnIndex="0" GridPane.rowIndex="3" />
            <DatePicker onKeyPressed="#PressEnterInsertReservation" fx:id="checkoutdate" GridPane.columnIndex="1" GridPane.rowIndex="3" />

            <HBox spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="4" >
               <Button fx:id="Ok" text="OK"  onAction="#insertnewreservation"/>
               <Button fx:id="cancelButton" text="Cancel" onAction="#setCancelButton" />
            </HBox>
</GridPane>

